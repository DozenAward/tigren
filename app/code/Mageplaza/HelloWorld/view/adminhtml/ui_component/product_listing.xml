<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="change_visibility">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">daily_deal</item>
                        <item name="label" xsi:type="string" translate="true">Daily Deal Selected</item>
                    </item>
                </argument>
                <argument name="actions" xsi:type="configurableObject">
                    <argument name="class" xsi:type="string">Mageplaza\HelloWorld\Ui\Component\MassAction\Dailydeal\Options</argument>
                    <argument name="data" xsi:type="array">
                        <item name="urlPath" xsi:type="string">helloworld/dailydeal/massupdatedeal</item>
                        <item name="paramName" xsi:type="string">id_daily_deal</item>
                    </argument>
                </argument>
            </action>
        </massaction>
    </listingToolbar>
</listing>