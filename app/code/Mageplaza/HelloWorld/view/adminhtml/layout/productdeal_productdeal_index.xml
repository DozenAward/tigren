<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <body>
        <referenceContainer name="content">
            <block class="Mageplaza\HelloWorld\Block\Adminhtml\Productdeal" name="productdeal_productdeal_grid_block.grid.container" >
                <block class="Magento\Backend\Block\Widget\Grid" name="productdeal_productdeal_grid_block.grid" as="grid">
                    <arguments>
                        <argument name="id" xsi:type="string">id</argument>
                        <argument name="dataSource" xsi:type="object">\Mageplaza\HelloWorld\Model\ResourceModel\Productdeal\Collection</argument>
                        <argument name="default_sort" xsi:type="string">id</argument>
                        <argument name="default_dir" xsi:type="string">ASC</argument>
                        <argument name="save_parameters_in_session" xsi:type="boolean">false</argument>
                        <argument name="use_ajax" xsi:type="boolean">true</argument>
                    </arguments>

                    <block class="Magento\Backend\Block\Widget\Grid\Massaction" name="mageplaza.helloWorld.massaction" as="grid.massaction">
                        <arguments>
                            <argument name="massaction_id_field" xsi:type="string">post_id</argument>
                            <argument name="form_field_name" xsi:type="string">ids</argument>
                            <argument name="use_select_all" xsi:type="string">1</argument>
                            <argument name="options" xsi:type="array">
                                <item name="disable" xsi:type="array">
                                    <item name="label" xsi:type="string" translate="true">Delete</item>
                                    <item name="url" xsi:type="string">*/*/massDelete</item>
                                </item>
                            </argument>
                        </arguments>
                    </block>

                    <block class="Magento\Backend\Block\Widget\Grid\ColumnSet" name="productdeal_productdeal_grid_block.grid.columnSet" as="grid.columnSet">
                        <arguments>
                            <argument name="rowUrl" xsi:type="array">
                                <item name="path" xsi:type="string">*/*/edit</item>
                            </argument>
                        </arguments>




                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="id_product_deal">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">ID Product Deal</argument>
                                <argument name="index" xsi:type="string">id_product_deal</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="id_product">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Id Product</argument>
                                <argument name="index" xsi:type="string">id_product</argument>
                                <argument name="type" xsi:type="string">name</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="id_deal">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">ID Daily Deal</argument>
                                <argument name="index" xsi:type="string">id_deal</argument>
                                <argument name="type" xsi:type="string">name</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>

                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="quantity_reamain_deal">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Quantity For Sale</argument>
                                <argument name="index" xsi:type="string">quantity_remain_deal</argument>
                                <argument name="type" xsi:type="string">name</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>

                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="price">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Price Deal($)</argument>
                                <argument name="index" xsi:type="string">deal_price</argument>
                                <argument name="type" xsi:type="string">deal_price</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="action"
                               acl="Mageplaza_Helloworld::dailydeal_menu">
                            <arguments>
                                <argument name="id" xsi:type="string">action</argument>
                                <argument name="header" xsi:type="string" translate="true">Action</argument>
                                <argument name="type" xsi:type="string">action</argument>
                                <argument name="getter" xsi:type="string">getId</argument>
                                <argument name="filter" xsi:type="boolean">false</argument>
                                <argument name="sortable" xsi:type="boolean">false</argument>
                                <argument name="index" xsi:type="string">stores</argument>
                                <argument name="is_system" xsi:type="boolean">true</argument>
                                <argument name="actions" xsi:type="array">
                                    <item name="view_action" xsi:type="array">
                                        <item name="caption" xsi:type="string" translate="true">Edit</item>
                                        <item name="url" xsi:type="array">
                                            <item name="base" xsi:type="string">*/*/edit/</item>
                                        </item>
                                        <item name="field" xsi:type="string">id</item>
                                    </item>
                                </argument>
                                <argument name="header_css_class" xsi:type="string">col-actions</argument>
                                <argument name="column_css_class" xsi:type="string">col-actions</argument>
                            </arguments>
                        </block>
                    </block>
                </block>
            </block>


<!--            <block  class="Mageplaza\HelloWorld\Block\Product"  name="dailydeal_product_index" template="Mageplaza_HelloWorld::product/list_product.phtml"  cacheable="false"/>-->

        </referenceContainer>
    </body>
</page>