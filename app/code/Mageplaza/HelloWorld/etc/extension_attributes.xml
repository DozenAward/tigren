<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">
<!--    <extension_attributes for="Magento\Checkout\Api\Data\ShippingInformationInterface">-->
<!--        <attribute code="custom_shipping_charge" type="string"/>-->
<!--    </extension_attributes>-->




    <extension_attributes for="Magento\Catalog\Api\Data\ProductInterface">
        <attribute code="new_item" type="int"/>
    </extension_attributes>
    <extension_attributes for="Magento\Catalog\Api\Data\ProductInterface">
        <attribute code="is_new_item" type="int"/>
    </extension_attributes>

    <extension_attributes for="Magento\Catalog\Api\Data\ProductInterface">
        <attribute code="id_daily_deal" type="int"/>
    </extension_attributes>

    <extension_attributes for="Magento\Catalog\Api\Data\ProductInterface">
        <attribute code="price_daily_deal" type="int"/>
    </extension_attributes>

    <extension_attributes for="Magento\Catalog\Api\Data\ProductInterface">
        <attribute code="quantity_daily_deal" type="int"/>
    </extension_attributes>


    <extension_attributes for="\Magento\Catalog\Api\Data\ProductInterface">
        <attribute code="daily_deal_value" type="string">
            <join reference_table="daily_deal" reference_field="id_daily_deal" join_on_field="id_daily_deal">
                <field>daily_deal_title</field>
                <field>percent</field>
            </join>
        </attribute>
    </extension_attributes>

</config>